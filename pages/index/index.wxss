page {
    color: #333;
}

.devices_summary {
    margin-top: 30rpx;
    padding: 10rpx;
    font-size: 32rpx;
    margin-bottom: 6rpx;
}

.device_list {
    height: 300rpx;
    margin-top: 0;
    border: 5rpx solid rgb(235, 208, 225);
    border-radius: 16rpx;
    width: auto;
}

.device_item {
    border-bottom: 1rpx solid #EEE;
    padding: 10rpx;
    color: #666;
}

.device_item_hover {
    background-color: rgba(0, 0, 0, .1);
}

.connected_info {
    margin-top: 20rpx;
    /* margin-top: env(safe-area-inset-bottom); */
    min-height: 120rpx;
    box-shadow: 0rpx 0rpx 3rpx 0rpx;
    height: 200rpx;
    border: 5rpx solid rgb(224, 219, 222);
    border-radius: 16rpx;
}

.connected_info .operation {
    position: absolute;
    display: inline-block;
    right: 20rpx;
}



.btoper {
    background: white;
    background-image: -webkit-linear-gradient(top, white, #eeeeee);
    background-image: -moz-linear-gradient(top, white, #eeeeee);
    background-image: -ms-linear-gradient(top, white, #eeeeee);
    background-image: -o-linear-gradient(top, white, #eeeeee);
    background-image: linear-gradient(to bottom, white, #eeeeee);
    -webkit-border-radius: 10;
    -moz-border-radius: 10;
    border-radius: 10px;
    -webkit-box-shadow: 0px 1px 3px #666666;
    -moz-box-shadow: 0px 1px 3px #666666;
    box-shadow: 0px 1px 3px #666666;
    font-family: Georgia;
    color: black;
    font-size: 20px;
    padding: 10px 20px 10px 20px;
    border: solid #f3f6f4 1px;
    text-decoration: none;
    width:fit-content;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 6rpx;
}

.btoper:hover {background-color: #808580}

.btoper:active {
  background-color: #8e968e;
  box-shadow: 0 10rpx #666;
  transform: translateY(10rpx);
}

.btgroup {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
}
.bt {
    background: #f4cccc;
    background-image: -webkit-linear-gradient(top, white, #f4cccc);
    background-image: -moz-linear-gradient(top, white, #f4cccc);
    background-image: -ms-linear-gradient(top, white, #f4cccc);
    background-image: -o-linear-gradient(top, white, #f4cccc);
    background-image: linear-gradient(to bottom, white, #f4cccc);
    -webkit-border-radius: 28;
    -moz-border-radius: 28;
    border-radius: 28rpx;
    color: black;
    font-size: 36rpx;
    padding: 10rpx 20rpx 10rpx 20rpx;
    text-decoration: none;
    box-shadow: 0px 1px 3px #666666;
    width: 26%;
    height: 100rpx;
}

.bt:hover {background-color: #808580}

.bt:active {
  background-color: #8e968e;
  box-shadow: 0 10rpx #666;
  transform: translateY(10rpx);
}

